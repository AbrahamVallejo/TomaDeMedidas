<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="3dp" android:paddingRight="3dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Ancho: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtAncho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:digits=".1234567890"
                android:textSize="12sp"/>

            <TextView
                android:text="Alto: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtAlto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:digits=".1234567890"
                android:textSize="12sp"/>

            <TextView
                style="@style/TextView"
                android:text="Grosor: "
                android:paddingTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtGrosor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:digits=".1234567890"
                android:textSize="12sp"/>

            <TextView
                android:text="Observaciones: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtObservaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Texto. Ej: Es una mesa."
                android:inputType="text"
                android:maxLength="600"
                android:textSize="12sp"/>

            <TextView
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imagen"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <TextView
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:id="@+id/TV_Imagen"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgFoto"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="50"
                        android:contentDescription="Foto"
                        android:maxHeight="200dp"
                        android:maxWidth="200dp"
                        android:minHeight="200dp"
                        android:minWidth="200dp"
                        android:src="@android:drawable/ic_menu_camera"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/TomarFoto"
                        style="@style/ButtonStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/tomar_foto" />
                    <!--android:onClick="onFotoClick"-->

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/Guardar"
                style="@style/ButtonStyle2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guardar"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>