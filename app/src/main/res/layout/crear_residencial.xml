            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <EditText
                android:id="@+id/txtCorredera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:maxLength="100"
                android:digits="abcdefghijklmnñopqrstuüvwxyz ABCDEFGHIJKLMNÑOPQRSTUÜVWXYZ
            -.,()1234567890"
                android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medida Sugerida: "
            android:paddingTop="8dp"
            style="@style/TextCrear"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

         <EditText
                android:id="@+id/txtMedidaSugerida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="text"
                android:maxLength="20"
                android:digits="abcdefghijklmnñopqrstuüvwxyz ABCDEFGHIJKLMNÑOPQRSTUÜVWXYZ
            -.,()1234567890"
                android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observaciones: "
            android:paddingTop="8dp"
            style="@style/TextCrear"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <EditText
            android:id="@+id/txtObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/observacion_residencial"
            android:inputType="text"
            android:maxLength="400"
            android:textSize="12sp"/>

         <Button
            android:id="@+id/Guardar"
            style="@style/ButtonStyle2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar"/>

