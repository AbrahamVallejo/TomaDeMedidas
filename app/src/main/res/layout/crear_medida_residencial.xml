<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicacion: "
                    android:layout_gravity="bottom"
                    style="@style/TextView"
                    android:textColor="@android:color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat"/>
            </LinearLayout>

            <Button
                android:id="@+id/crearUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                style="@style/ButtonStyle2"
                android:text="Crear Ubicación"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>

            <Spinner
                android:id="@+id/spinner_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Piso: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtPiso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Texto "
                android:inputType="text"
                android:maxLength="45"
                android:digits="abcdefghijklmnñopqrstuüvwxyz ABCDEFGHIJKLMNÑOPQRSTUÜVWXYZ
            -.,()1234567890"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="G: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="H: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prof Marco: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtProfMarco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prof Jaladera: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtProfJaladera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="numberDecimal"
                android:digits="1234567890-."
                android:maxLength="20"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Control: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <Spinner
                android:id="@+id/spinner_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agpto: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <Spinner
                android:id="@+id/spinner_agpto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fijacion: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <Spinner
                android:id="@+id/spinner_fijacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corredera: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <Spinner
                android:id="@+id/spinner_corredera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medida Sugerida: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtMedidaSugerida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ej_metros"
                android:inputType="text"
                android:maxLength="20"
                android:digits="abcdefghijklmnñopqrstuüvwxyz ABCDEFGHIJKLMNÑOPQRSTUÜVWXYZ
                -.,()1234567890"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observaciones: "
                android:paddingTop="8dp"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <EditText
                android:id="@+id/txtObservaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/observacion_residencial"
                android:inputType="text"
                android:maxLength="400"
                android:textSize="12sp"/>

            <TextView
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imagen"
                style="@style/TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/TV_Imagen"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:scrollHorizontally="true"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgFoto"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="50"
                        android:contentDescription="Foto"
                        android:maxHeight="200dp"
                        android:maxWidth="200dp"
                        android:minHeight="200dp"
                        android:minWidth="200dp"
                        android:src="@android:drawable/ic_menu_camera"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/TomarFoto"
                        style="@style/ButtonStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/tomar_foto" />
                    <!--android:onClick="onFotoClick"-->

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/Guardar"
                style="@style/ButtonStyle2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guardar"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>