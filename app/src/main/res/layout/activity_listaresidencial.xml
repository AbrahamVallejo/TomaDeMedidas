                        android:textStyle="normal"
                        android:typeface="sans"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="D: "
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                    <TextView
                        android:id="@+id/D"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="D"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="E: "
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                    <TextView
                        android:id="@+id/E"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="E"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="F: "
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                    <TextView
                        android:id="@+id/F"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="F"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="G: "
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                    <TextView
                        android:id="@+id/G"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="G"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="H: "
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                    <TextView
                        android:id="@+id/H"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="H"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="normal"
                        android:typeface="sans"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Agpto: "
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:typeface="sans"/>
                <TextView
                    android:id="@+id/Agpto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
